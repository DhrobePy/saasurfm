    SUM(CASE WHEN DATEDIFF(co.required_date, CURDATE()) < 0 AND co.status NOT IN ('delivered', 'cancelled') THEN 1 ELSE 0 END) as overdue_count
FROM credit_orders co WHERE co.order_date BETWEEN ? AND ? | Params: Array
(
    [0] => 2025-10-31
    [1] => 2025-11-01
    [2] => 50
    [3] => 0
)

